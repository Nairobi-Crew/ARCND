{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "WebWorker",
      "ScriptHost"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "declaration": false,
    "importHelpers": true,
    "jsx": "react",
    "moduleResolution": "node",
    "module": "es2015",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,

    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      // Указываем ссылки до директорий в проекте, чтобы каждый раз в импортах не писать относительные пути
      "App": [
        "src/App"
      ],
      "Pages/*": [
        "src/Pages/*"
      ],
      "Components/*": [
        "src/components/*"
      ],
      "UI/*": [
        "src/components/ui/*"
      ],
      "Config/*": [
        "src/config/*"
      ],
      "Util/*": [
        "src/util/*"
      ],
      "Reducers/*": [
        "src/Store/reducers/*"
      ],
      "Store/*": [
        "src/Store/*"
      ],
      "Common/*": [
        "src/common/*"
      ],
      "Server/*": [
        "src/server/*"
      ]
    },
  },
  "exclude": [
    "node_modules"
  ]
}
