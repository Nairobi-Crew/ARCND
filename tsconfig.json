{
    "compilerOptions": {
        "target": "es2020",
        "lib": [
            "dom",
            "es2020",
            "scripthost",
            "es2015.proxy"
        ],
        "outDir": "static/build",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "module": "ES2015",
        "jsx": "react",
        "baseUrl": "./",
        "moduleResolution": "Node",
        "paths": { // Указываем ссылки до директорий в проекте, чтобы каждый раз в импортах не писать относительные пути
            "App": ["src/App"],
            "Pages/*": ["src/Pages/*"],
            "Components/*": ["src/components/*"],
            "UI/*": ["src/components/ui/*"],
            "Config/*": ["src/config/*"],
          "Util/*": ["src/util/*"],
          "Reducers/*": ["src/Store/reducers/*"],
          "Store/*": ["src/Store/*"]
        }
    },
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "exclude": [
        "node_modules"
    ]
}
